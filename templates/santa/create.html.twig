{% extends 'base.html.twig' %}

{% block title %}Hello RamdomSantaController!{% endblock %}

{% block body %}
    <div class="w3-card-4 ">
        <div class="w3-container w3-theme-dark">
            <h2>Ajouter un Random Santa</h2>
        </div>
        {{ form_start(form, {'attr': {'class': 'w3-container'}}) }}
        <p>
            <label for="name">Nom</label>
            {{ form_widget(form.name, {'attr': {'class': 'w3-input w3-border'}}) }}
        </p>
        <p>
            <label for="year">Last Name</label>
            {{ form_widget(form.year, {'attr': {'class': 'w3-input w3-border'}}) }}
        </p>
        <p>
            {{ form_row(form.submit, {'attr': {'class': 'w3-btn w3-theme-dark'}, 'label': 'Ajouter'}) }}
        </p>

        {{ form_end(form) }}
    </div>
{% endblock %}
